<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<h2>Instructions for <%= @cocktail.name %>:</h2>
<ul>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.description %></li>
<li><%= Ingredient.find(dose.ingredient_id).name %></li>
<%= link_to 'Delete this ingredient', dose_path(dose), method: :delete %>
<% end %>
</ul>

<%= link_to 'Back', cocktails_path %> |
<%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>

